layout.html.twig{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}
    Connexion
{% endblock %}

{% block fos_user_content %}
    <form style="margin: auto; margin-top: 15%; max-width: 700px; background: none; border: 30px solid rgba(255,255,255, 0.4); border-radius: 10px;  font-family: 'Open Sans','Helvetica Neue',Helvetica,Arial,sans-serif;" action="{{ path("fos_user_security_check") }}" method="post" novalidate>

        <div style="background: white;padding: 40px 20px 20px 20px;font-size: 12px; width: 660px; color: #191919; border: 1px solid rgba(0,0,0,0.6);">

            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            {% if error %}
                <div class="form-group has-error has-feedback" style="text-align: center;margin-bottom: 0px; color: red;">
                    <p class="text-danger">
                        L'association du compte / mot de passe ne correspond pas
                    </p>
                </div>
                <br>
            {% endif %}

            <p>
                <label style="width: 180px; display: inline-block; text-align: right; padding-right: 20px;font-size: 12px;font-weight: bold;line-height: 40px;margin-right: 1px;border-right: 5px solid #b3d4fc;" for="username" class="col-sm-4 control-label">Login</label>
                <input style="width: 350px;padding: 5px; color: #191919; border-radius: 5px;border: 1px solid rgba(0,0,0,0.2);  background: #e3e3e3; line-height: 30px;"  type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Login" required="required" />
            </p>
            <p>
                <label style="width: 180px; display: inline-block; text-align: right; padding-right: 20px;font-size: 12px;font-weight: bold;line-height: 40px;margin-right: 1px;border-right: 5px solid #b3d4fc;" for="password" class="col-sm-4 control-label">Mot de passe</label>
                <input style="width: 350px;padding: 5px; color: #191919; border-radius: 5px;border: 1px solid rgba(0,0,0,0.2);  background: #e3e3e3; line-height: 30px;"  type="password" class="form-control" id="password" name="_password" required="required" placeholder="Mot de passe"/>
            </p>
            <p>
                <br>
                <label style="text-align: center; width: 100%; display: block;">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> <label style="display: inline-block;  vertical-align: bottom;" for="remember_me">Se souvenir de moi</label>
                </label>
            </p>
            <hr style="border: 1px solid rgba(0,0,0,0.05);border-bottom: none;margin-top: 20px;margin-bottom: 10px;"/>
            <p style="text-align: center; position: relative;">
                <span style="display: block; height: 14px; background: #b3d4fc; position: absolute; width:100%; top: 10px; opacity:0.5;"></span>
                <button style="position:relative; z-index: 100;font-size: 12px;padding: 10px 20px; cursor: pointer; color: #191919; border-radius: 5px;border: 1px solid rgba(0,0,0,0.2);  background: rgba(255,255,255,1);" type="submit" class="btn btn-default">Connexion</button>
            </p>
        </div>
    </form>


{% endblock fos_user_content %}
