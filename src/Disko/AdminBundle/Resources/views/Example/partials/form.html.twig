

<div class="row">

    <div class="col-sm-12">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#general" data-toggle="tab"><i class="fa fa-cogs"></i> Parmètres généraux
                    {% if
                    form.name.vars['errors'] |length > 0 or
                    form.active.vars['errors'] |length > 0 or
                    form.description.vars['errors'] |length > 0 or
                    form.fileKeyword.vars['errors'] |length > 0
                    %}
                        <span class="badge badge-danger flash-danger" ><i class="fa fa-flash"></i></span>
                    {% endif %}
                </a>
            </li>
        </ul>


        <div class="tab-content tab-content-bordered">
            <div class="tab-pane fade in active" id="general">
                    <div class="form-group {% if form.name.vars['errors'] |length > 0 %}has-error has-feedback{% endif %}">
                        <div class="row">
                            {{ form_label(form.name, "Nom", { 'label_attr': { 'class': 'col-sm-2 control-label' }}) }}
                            <div class="col-sm-8">
                                {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                                {% if form.name.vars['errors'] |length > 0 %}<div class="jquery-validate-error help-block">{{ form_errors(form.name) }}</div>{% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="form-group {% if form.description.vars['errors'] |length > 0 %}has-error has-feedback{% endif %}">
                        <div class="row">
                            {{ form_label(form.description, 'Description', { 'label_attr': { 'class': 'col-sm-2 control-label' }}) }}
                            <div class="col-sm-8">
                                {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'placeholder' : '200 caractères max (espaces compris)'} }) }}
                                {% if form.description.vars['errors'] |length > 0 %}<div class="jquery-validate-error help-block">{{ form_errors(form.description) }}</div>{% endif %}
                            </div>
                        </div>
                    </div>


                    <div class="photoSpace">




                        <div class="row">
                            <div class="col-sm-10 photoPreview" style="text-align: center; margin-bottom: 20px;">
                                {% if form.vars['value'] is not empty and form.vars['value'].pathKeyword is not empty %}
                                    <img src="{{ asset(form.vars['value'].getWebPath('Keyword')) }}" />
                                {% else %}
                                    <img src="{{ asset("bundles/admin/images/pixel-admin/noimage.jpg") }}" />
                                {% endif %}
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-8">
                                <div class="alert alert-warning">
                                    Dimensions idéales : 188x188px, png en fond transparent et maximum 500ko
                                </div>
                            </div>
                            <div class="col-sm-2"></div>
                        </div>
                        <div class="form-group {% if form.fileKeyword.vars['errors'] |length > 0 %}has-error has-feedback{% endif %}">
                            {{ form_label(form.fileKeyword, 'Photo', { 'label_attr': { 'class': 'col-sm-2 control-label' }}) }}
                            <div class="col-sm-8">
                                {{ form_widget(form.fileKeyword, { 'attr': {'class': 'form-control photoInput'} }) }}
                                {% if form.fileKeyword.vars['errors'] |length > 0 %}<div class="jquery-validate-error help-block">{{ form_errors(form.fileKeyword) }}</div>{% endif %}
                            </div>
                        </div>

                        {% if form.fileAtDeleteKeyword.vars['errors'] |length > 0 %}<div class="col-sm-2 control-label"></div><div class="col-sm-10"><div class="alert alert-danger alert-form">{{ form_errors(form.fileAtDeleteKeyword) }}</div></div>{% endif %}
                        <div class="form-group {% if form.fileAtDeleteKeyword.vars['errors'] |length > 0 %}has-error has-feedback{% endif %}">
                            {{ form_label(form.fileAtDeleteKeyword, 'Supprimer la photo', { 'label_attr': { 'class': 'col-sm-2 control-label' }}) }}
                            <div class="col-sm-8 toggle-button" data-on="success" data-off="danger">
                                {{ form_widget(form.fileAtDeleteKeyword, { 'attr': {'style': 'border:none; box-shadow: none;margin-top: 0px;', 'class': 'form-control'} }) }}
                            </div>
                        </div>

                    </div>

                <hr/>

                <div class="form-group {% if form.active.vars['errors'] |length > 0 %}has-error has-feedback{% endif %}">
                    {{ form_label(form.active, 'Activé', { 'label_attr': { 'class': 'col-sm-2 control-label' }}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.active, { 'attr': {'class': 'form-control switcher'} }) }}
                        <p class="help-block help-block-noevol">Permet d'activer ce personnage sur le quizz.</p>
                    </div>
                </div>
            </div>

            {{ form_errors(form._token) }}
            {{ form_widget(form._token) }}

        </div>
    </div>

</div>