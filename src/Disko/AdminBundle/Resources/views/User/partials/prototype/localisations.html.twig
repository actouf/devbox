
<div class="form-group {% if form.title.vars['errors'] |length > 0 %}has-error has-feedback{% endif %}">
    <div class="row">
        {{ form_label(form.title, "Titre", { 'label_attr': { 'class': 'col-sm-2 control-label' }}) }}
        <div class="col-sm-8">
            {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
            {% if form.title.vars['errors'] |length > 0 %}<div class="jquery-validate-error help-block">{{ form_errors(form.title) }}</div>{% endif %}
        </div>
    </div>
</div>


